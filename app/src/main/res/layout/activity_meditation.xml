<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/green_light"
    android:id="@+id/scrollView">


<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:paddingTop="90dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="bottom">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Meditation Practice For Today"
        android:background="@color/blue_light"
        android:padding="8dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Video will be played in this frame"-->
    <FrameLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/videoViewFrame"
        android:paddingTop="0dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:context=".MainActivity">
        <VideoView
            android:id="@+id/meditationVideoView"
            android:layout_width="match_parent"
            android:layout_height="300dp"

            android:padding="5dp"
            />
        <TextView

            android:id="@+id/nowPlaying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meditation Playing Now"
            android:background="@color/material_dynamic_neutral10"
            android:gravity="top"
            android:textSize="30dp"
            android:textColor="#FFFFFF"

            android:layout_marginBottom="8dp"
            />
        <Button

            android:id="@+id/closeButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="X"

            android:background="@drawable/close_button"
        android:textColor="#FFFFFF"
        android:layout_gravity="top|end"
        android:padding="5dp"
        android:layout_margin="10dp"
            />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#25595B"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
       >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meditation for health"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A practice to make you feel healthier (12 min)"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/meditationHealthBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click to practice"
            android:backgroundTint="#FF9900"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#25595B"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meditation for focus"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A practice to make you feel more concentrated (5 min)"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/meditationFocusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click to practice"
            android:backgroundTint="#FF9900"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#25595B"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meditation for studying"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A practice to make you study better (12 min)"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/meditationStudyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click to practice"
            android:backgroundTint="#FF9900"
            android:textColor="#FFFFFF" />



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#25595B"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meditation for relaxation"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A practice to make you feel relaxed (12 min)"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/meditationRelaxBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click to practice"
            android:backgroundTint="#FF9900"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FF9900"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload or Delete Your Own Video"
            android:textSize="18sp"
            android:textColor="#25595B"
            android:layout_marginBottom="8dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:id="@+id/uploadVideoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Video"
            android:backgroundTint="#25595B"
            android:textColor="#FFFFFF"
            android:layout_marginRight="5sp"/>
        <Button
            android:id="@+id/selectVideoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Video to Play"
            android:backgroundTint="#25595B"
            android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/searchOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/searchField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search meditations..."
            android:padding="8dp"
            android:background="@android:drawable/editbox_background"
            />

         <Button
              android:id="@+id/searchButton"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Search"
             android:backgroundTint="#FF9900"
             android:textColor="#FFFFFF" />
      </LinearLayout>


