<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/green_light"
    android:id="@+id/scrollView">

<LinearLayout
    android:id="@+id/main"
    android:paddingTop="90dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_light"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="bottom"
    android:paddingBottom="20dp">

    <!-- Music will be played in this frame" -->
    <FrameLayout

        android:id="@+id/musicViewFrame"
        android:paddingTop="0dp"
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:context=".MainActivity">









        <TextView

            android:id="@+id/nowPlaying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Music Playing Now"
            android:background="@color/material_dynamic_neutral10"
            android:gravity="top"
            android:textSize="30dp"
            android:textColor="#FFFFFF"

            android:layout_marginBottom="8dp"
            />

        <Button

            android:id="@+id/closeButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|end"

            android:layout_margin="10dp"
            android:background="@drawable/close_button"
            android:padding="5dp"
            android:text="X"
            android:textColor="#FFFFFF" />




    </FrameLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_light"
        android:layout_marginTop="10dp"
        android:text="Choose Playlist For Today"
        android:layout_marginBottom="20dp"
        android:textSize="30dp" />




    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
       >

        <!-- Card Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#8E2444"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Music for studying"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listen to a relaxing playlist\n(30 min)"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- Button -->
            <Button
                android:id="@+id/musicStudyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click to Listen"
                android:backgroundTint="#FF9900"
                android:textColor="#FFFFFF"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:background="#DFF0C1">

        <!-- Card Content -->
        <LinearLayout
            android:layout_width="match_parent"
